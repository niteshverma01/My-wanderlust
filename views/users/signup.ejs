<% layout("/layouts/boilerplate") %>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap');

  :root {
    --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    --accent-gradient: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
    --neon-blue: #00f2fe;
    --neon-pink: #f093fb;
    --glass-bg: rgba(15, 15, 35, 0.85);
    --glass-border: rgba(255, 255, 255, 0.2);
    --shadow-neon: 0 0 20px rgba(0, 242, 254, 0.3);
    --shadow-heavy: 0 15px 40px rgba(0, 0, 0, 0.3);
    --gold-accent: #ffd700;
  }

  .signup-container {
    background: var(--glass-bg);
    backdrop-filter: blur(25px);
    border: 2px solid var(--neon-blue);
    border-radius: 25px;
    padding: 2rem;
    box-shadow: var(--shadow-heavy);
    width: 100%;
    max-width: 400px;
    margin: 1rem auto;
  }

  h4 {
    text-align: center;
    font-family: 'Inter', sans-serif;
    font-weight: 800;
    background: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    margin-bottom: 1.5rem;
    text-transform: uppercase;
    letter-spacing: 2px;
  }

  .form-label {
    font-family: 'Inter', sans-serif;
    font-weight: 600;
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 0.3rem;
    display: block;
  }

  .form-control {
    font-family: 'Inter', sans-serif;
    background: rgba(0, 0, 0, 0.5);
    border: 1px solid var(--neon-blue);
    border-radius: 15px;
    color: #fff;
    padding: 0.75rem 1rem;
    font-size: 1rem;
    transition: all 0.3s ease;
    box-shadow: inset 0 0 10px rgba(0, 242, 254, 0.1);
  }

  .form-control:focus {
    outline: none;
    border-color: var(--neon-pink);
    box-shadow: 0 0 15px rgba(240, 147, 251, 0.3);
    transform: scale(1.02);
  }

  .form-control::placeholder {
    color: rgba(255, 255, 255, 0.6);
  }

  .invalid-feedback {
    color: var(--neon-pink);
    font-family: 'Inter', sans-serif;
    font-size: 0.85rem;
    margin-top: 0.25rem;
    display: none;
  }

  .form-control:invalid:focus + .invalid-feedback {
    display: block;
  }

  .btn-success {
    font-family: 'Inter', sans-serif;
    background: var(--primary-gradient);
    border: none;
    border-radius: 20px;
    padding: 0.75rem 2rem;
    font-weight: 700;
    font-size: 1.1rem;
    color: #fff;
    width: 100%;
    transition: all 0.4s ease;
    box-shadow: var(--shadow-neon);
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .btn-success:hover {
    transform: translateY(-5px);
    box-shadow: 0 0 25px rgba(0, 242, 254, 0.5);
  }

  .needs-validation:invalid .form-control {
    border-color: var(--neon-pink);
  }

  @media (max-width: 576px) {
    .signup-container {
      padding: 1.5rem;
    }

    h4 {
      font-size: 1.5rem;
    }

    .form-control {
      font-size: 0.95rem;
      padding: 0.6rem 1rem;
    }

    .btn-success {
      font-size: 1rem;
      padding: 0.6rem 1.5rem;
    }
  }
</style>

<div class="row mt-3">
  <h4 class="col-6 offset-3">SignUp on Wanderlust</h4>

  <div class="col-6 offset-3">
    <div class="signup-container">
      <form action="/signup" method="POST" class="needs-validation" novalidate>
        <div class="mb-3">
          <label for="username" class="form-label">Username</label>
          <input
            name="username"
            id="username"
            placeholder="Enter Username"
            type="text"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please enter a username</div>
        </div>

        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input
            name="email"
            id="email"
            placeholder="Enter Email"
            type="email"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please enter a valid email</div>
        </div>

        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input
            name="password"
            id="password"
            placeholder="Enter Password"
            type="password"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please enter a password</div>
        </div>

        <button class="btn btn-success" type="submit">SignUp</button>
      </form>
    </div>
  </div>
</div>