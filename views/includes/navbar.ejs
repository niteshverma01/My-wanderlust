


<style>
  .modern-navbar {
    background: rgba(255, 255, 255, 0.15);
    border-radius: 20px;
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border: 1px solid rgba(255, 255, 255, 0.18);
    box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.2);
    transition: all 0.3s ease;
  }

  .navbar-brand {
    font-weight: bold;
    font-size: 1.4rem;
    color: #fe424d !important;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .navbar-brand:hover {
    color: #ff5b5b !important;
    transform: scale(1.05);
    transition: 0.3s;
  }

  .search-btn {
    background-color: #fe424d;
    color: #fff;
    border-radius: 25px;
    padding: 0 1.2rem;
    transition: all 0.3s ease;
    display: flex !important;
    justify-content: center;
    align-items: center;
    gap: 4px;
  }

  .search-btn:hover {
    background-color: #ff5b5b;
    transform: scale(1.05);
  }

  .search-inp {
    border-radius: 25px;
    padding: 0.5rem 1.2rem;
  }

  .nav-link {
    font-weight: 500;
    margin: 0 0.5rem;
    transition: 0.3s;
    border-radius: 10px;
  }

  .nav-link:hover {
    background-color: rgba(254, 66, 77, 0.1);
    color: #fe424d !important;
    transform: scale(1.05);
  }

  @media (max-width: 768px) {
    .navbar-nav {
      flex-direction: column;
      text-align: center;
    }

    .navbar-nav .nav-link {
      width: 100%;
      margin: 0.5rem 0;
    }

    .search-inp {
      width: 100%;
      margin-bottom: 1rem;
    }

    .search-btn {
      width: 100%;
    }
  }

  .glass-container {
    padding: 0.5rem 1rem;
  }
</style>

<nav class="navbar navbar-expand-md sticky-top modern-navbar mt-2 mx-3 glass-container">
  <div class="container-fluid">
    <!-- Logo -->
    <a class="navbar-brand" href="/listings">
      <i class="fa-regular fa-compass"></i> WanderLust
    </a>

    <!-- Mobile Toggle -->
    <button class="navbar-toggler text-white border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup">
      <i class="fa-solid fa-bars"></i>
    </button>

    <!-- Navbar content -->
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <!-- Left Links -->
      <div class="navbar-nav">
        <a class="nav-link" href="/listings"><i class="fa-solid fa-globe"></i> Explore</a>
        <a class="nav-link" href="/listings/new"><i class="fa-solid fa-plus"></i> Add Place</a>
      </div>

      <!-- Search bar -->
      <div class="navbar-nav ms-auto me-3">
        <form class="d-flex" action="/listings/search" method="GET">
          <input class="form-control me-2 search-inp" type="search" name="title" placeholder="Search destinations" />
          <button class="btn search-btn" type="submit">
            <i class="fa-solid fa-magnifying-glass"></i> Search
          </button>
        </form>
      </div>

      <!-- Right Links -->
      <div class="navbar-nav">
        <% if (!currUser) { %>
          <a class="nav-link" href="/signup"><i class="fa-solid fa-user-plus"></i> Sign Up</a>
          <a class="nav-link" href="/login"><i class="fa-solid fa-right-to-bracket"></i> Log In</a>
        <% } else { %>
          <a class="nav-link" href="/logout"><i class="fa-solid fa-right-from-bracket"></i> Logout</a>
        <% } %>
      </div>
    </div>
  </div>
</nav>

